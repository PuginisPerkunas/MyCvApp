<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_card_background"
    android:orientation="vertical"
    tools:context="com.example.a0111010001101111.mypersonalcvv2.Activities.KnowledgeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:weightSum="1">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="0dp"
            android:layout_height="45dp"
            android:background="@drawable/ic_back_arr_white"
            />

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:layout_marginRight="35dp"
            android:textSize="34dp"
            android:textColor="@android:color/white"
            android:text="@string/title_android_studio" />



    </LinearLayout>


    <FrameLayout
        android:id="@+id/content_frame_knowledge"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/navStartColor"
        app:itemIconTint="@color/color_botom_nav_item"
        app:itemTextColor="@android:color/white"
        app:menu="@menu/navigation" />

</LinearLayout>
