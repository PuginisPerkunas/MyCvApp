<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.a0111010001101111.mypersonalcvv2.StartFragment">

    <TextView
        android:id="@+id/start_frag_first_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/frag_start"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/frag_start_title"
        />

    <LinearLayout
        android:id="@+id/linear_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_frag_first_text">
    <android.support.v7.widget.CardView
        android:id="@+id/start_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="20dp"
        card_view:contentPadding="0dp"
        android:layout_below="@+id/start_frag_first_text"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/card_background"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/ask_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="@dimen/frag_start_ask_text"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:text="@string/start_main_question"/>

            <LinearLayout
                android:id="@+id/first_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_below="@id/ask_text"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/frag_start_img_size"
                    android:layout_height="@dimen/frag_start_img_size"
                    android:background="@drawable/ic_experiance"/>
                <ImageView
                    android:layout_width="@dimen/frag_start_img_size"
                    android:layout_height="@dimen/frag_start_img_size"
                    android:layout_marginLeft="@dimen/frag_start_margin_left"
                    android:background="@drawable/ic_knowledge"/>
            </LinearLayout>

            <TextView
                android:text="@string/start_first_explain"
                android:layout_centerHorizontal="true"
                android:id="@+id/becouse_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/frag_becouse_txt"
                android:layout_below="@+id/first_linear"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/becouse_txt"
                android:weightSum="2">
                <TextView
                    android:id="@+id/work_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/frag_start_worknprack"
                    android:textAlignment="center"
                    android:text="@string/start_work"
                    android:textColor="@android:color/white"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/praktic_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/frag_start_worknprack"
                    android:text="@string/start_practice"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:layout_weight="1"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/linear_one">

        <android.support.v7.widget.CardView
            android:id="@+id/second_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardCornerRadius="20dp"
            card_view:contentPadding="0dp"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_background"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/text_second_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/second_card_title"
                    android:layout_centerHorizontal="true"
                    android:padding="10dp"
                    android:text="@string/start_second_question"/>

                <ImageView
                    android:id="@+id/second_card_image"
                    android:layout_width="@dimen/my_picture"
                    android:layout_height="@dimen/my_picture"
                    android:layout_below="@+id/text_second_card"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/image_actual"/>

                <TextView
                    android:id="@+id/second_card_second_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/second_card_image"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:textColor="@android:color/white"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:textSize="@dimen/second_card_second_txt"
                    android:text="@string/start_second_explain"/>

                <Button
                    android:id="@+id/second_card_button"
                    android:layout_below="@+id/second_card_second_text"
                    android:layout_width="650dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="80dp"
                    android:text="@string/start_button_open"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="20dp"
                    android:textSize="42dp"
                    android:background="@drawable/button_background"
                    />


            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>
</ScrollView>
